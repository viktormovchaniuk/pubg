{% extends 'admin.jinja2' %}

{% block content_part %}

<div class="tab-content text-white">
  <h2 class="mb-5">К выплате:</h2>
  {% if data|length > 0 %}
    {% for item in data %}
    <div class="card text-dark mb-2">
    <div class="card-body d-flex align-items-center">
      <ul>
        <li>
          Турнир: <span class="text-primary">{{item.team.tournament.name}} ({{item.team.tournament.tournament_name}}  Squad: {{item.team.tournament.squad}})</span>
        </li>
        <li>
          Email: <span class="text-primary">{{item.team.creator.email}}</span>
        </li>
        <li>
          Платежный метод: <span class="text-primary">{{item.team.creator.payout_method}}</span>
        </li>
        <li>
          Платежная ин-фа: <span class="text-primary">{{item.team.creator.payment_card}}</span>
        </li>
        <li>
       
           {% if item.order.success %}
            Платеж: <span class="text-primary">{{item.order.amount}} RUB  </span>
           {% else %}
            Платеж: <span class="text-danger">Ошибка</span>
           {% endif %}
         
        </li>
        <li>
        
            К виплате: <span class="text-primary">{{item.team.tournament.type.prize * item.team.winners|length}} RUB </span>
         
        </li>
        <li> Победители: <span class="text-primary">{{item.team.winners|join(', ')}} </span></li>
      </ul>
      <a target="_blank" class="btn btn-primary ml-auto" href="/event_list/{{item.team.tournament.id}}">{{item.team.tournament.name}}</a>
    </div>
    </div>
    {% endfor %}
  {% else %}
    <p>Пусто!</p>
  {% endif %}

</div>
{% endblock content_part %}
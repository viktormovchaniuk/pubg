{% extends 'admin_layout.jinja2' %}

{% block content %}

<div class="container">
  <div class="row justify-content-center align-items-center">
    <div class="col-10 col-lg-4">
      <div class="card">
        <article class="card-body">
          <h4 class="card-title text-center mb-4 mt-1">Sign in to AdminPage</h4>
          <hr>
          <p class="text-danger text-center">{{message}}</p>
          <form action="{{ url }}" method="post">
            <input type="hidden" name="next" value="{{ next_url }}">
            <div class="form-group">
              <div class="input-group">
                <input name="login" value="{{ login }}" class="form-control" placeholder="Login" type="text">
              </div>
            </div>
            <div class="form-group">
              <div class="input-group">
                <input type="password" name="password" class="form-control" placeholder="******" type="password">
              </div>
            </div>
            <div class="form-group">
              <button type="submit" name="form.submitted" value="Log In" class="btn btn-primary btn-block">
                Login
              </button>
            </div>
            <p class="text-center"><a href="{{request.route_url('home')}}" class="btn">На главную</a></p>
          </form>
        </article>
      </div>
    </div>
  </div>
</div>
{% endblock content %}